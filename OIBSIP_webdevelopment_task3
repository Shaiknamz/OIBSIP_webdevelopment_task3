  <meta charset="UTF-8">
  <title>Enhanced To-Do WebApp</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, #6a11cb, #2575fc);
      margin: 0;
      padding: 20px;
      color: white;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    .top-bar {
      text-align: center;
      margin-bottom: 20px;
    }
    input, select, button {
      padding: 10px;
      margin: 5px;
      border-radius: 5px;
      border: none;
      outline: none;
    }
    input[type="text"] {
      width: 200px;
    }
    button {
      cursor: pointer;
    }
    .container {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }
    .task-section {
      flex: 1;
      min-width: 300px;
      background: rgba(255, 255, 255, 0.1);
      padding: 15px;
      border-radius: 10px;
      backdrop-filter: blur(6px);
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      background: white;
      color: black;
      margin: 8px 0;
      padding: 10px;
      border-radius: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    .priority-high { border-left: 6px solid red; }
    .priority-medium { border-left: 6px solid orange; }
    .priority-low { border-left: 6px solid green; }
    .timestamp {
      font-size: 12px;
      color: #555;
      display: block;
      margin-top: 4px;
    }
    .btn-group {
      display: flex;
      gap: 5px;
    }
    .complete-btn { background: #4CAF50; color: white; }
    .delete-btn { background: #f44336; color: white; }
    .clear-btn { background: #ff9800; color: white; margin-top: 10px; }
  </style>
</head>
<body>
  <h1>Enhanced To-Do WebApp</h1>

  <div class="top-bar">
    <input type="text" id="taskInput" placeholder="Enter a new task">
    <select id="prioritySelect">
      <option value="high">High Priority</option>
      <option value="medium">Medium Priority</option>
      <option value="low" selected>Low Priority</option>
    </select>
    <button onclick="addTask()">Add Task</button>
    <input type="text" id="searchInput" placeholder="Search tasks..." onkeyup="searchTasks()">
  </div>

  <div class="container">
    <div class="task-section">
      <h2>Pending Tasks</h2>
      <ul id="pendingList"></ul>
      <button class="clear-btn" onclick="clearAll('pendingList')">Clear All Pending</button>
    </div>
    <div class="task-section">
      <h2>Completed Tasks</h2>
      <ul id="completedList"></ul>
      <button class="clear-btn" onclick="clearAll('completedList')">Clear All Completed</button>
    </div>
  </div>

  <script>
    function getDateTime() {
      const now = new Date();
      return now.toLocaleString();
    }

    function addTask() {
      const input = document.getElementById("taskInput");
      const taskText = input.value.trim();
      const priority = document.getElementById("prioritySelect").value;

      if (taskText === "") {
        alert("Please enter a task!");
        return;
      }

      const li = document.createElement("li");
      li.classList.add(priority-${priority});
      li.innerHTML = `
        <span>
          ${taskText} <br>
          <span class="timestamp">Added: ${getDateTime()}</span>
        </span>
        <div class="btn-group">
          <button class="complete-btn" onclick="markComplete(this)">Complete</button>
          <button class="delete-btn" onclick="deleteTask(this)">Delete</button>
        </div>
      `;
      document.getElementById("pendingList").appendChild(li);
      input.value = "";
    }

    function markComplete(button) {
      const li = button.parentElement.parentElement;
      li.querySelector(".timestamp").innerText = "Completed: " + getDateTime();
      li.querySelector(".btn-group").innerHTML =
        <button class="delete-btn" onclick="deleteTask(this)">Delete</button>;
      document.getElementById("completedList").appendChild(li);
    }

    function deleteTask(button) {
      button.parentElement.parentElement.remove();
    }

    function clearAll(listId) {
      document.getElementById(listId).innerHTML = "";
    }

    function searchTasks() {
      const searchValue = document.getElementById("searchInput").value.toLowerCase();
      document.querySelectorAll("li").forEach(task => {
        const text = task.innerText.toLowerCase();
        task.style.display = text.includes(searchValue) ? "flex" : "none";
      });
    }
  </script>
</body>
</html>
